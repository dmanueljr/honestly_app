<% if current_user %>
	You are logged in as <%= @current_user.first_name%>
	<%= link_to "LOG OUT", logout_path, method: :delete %>
<% else %>
	<%= link_to "SIGN UP", users_new_path %>
	<%= link_to "LOG IN", login_path %>
<% end %> 


<h1>Hello, this is the list of public messages</h1>

	<% @messages.each do |message| %>
	<ul>
		<li>Message</li>
		<li><%= message.msg %></li>
		<li><%= link_to 'Show', message_path(message) %> <%= link_to 'Edit', edit_message_path(message) %> <%= link_to 'Delete', message_path(message),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></li>
	</ul>
	<% end %>